<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-heading text-center">
        <h2>Log in</h2>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="text-center" id="login-form" style="display: block;">
              <div class="form-group">
                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                  <%= f.input :email, placeholder: "Email", required: false, autofocus: true, label: false %>


                  <%= f.input :password, placeholder: "Password", required: false, label: false %>
                  <%= f.input :remember_me, as: :boolean, label: false, :inline_label => true if devise_mapping.rememberable? %>
                  <div class="form-group text-center">
                  </div>
              </div>
            </div>

              <div class="form-actions text-center">
                <%= f.button :submit, "Log in" %>
              </div>
            <% end %>
                          <div class="form-group">
              								<div class="row">
              									 <div class="col-lg-12">
              											<div class="text-center">
                                        <%= render "devise/shared/links" %>
                                    </div>
                                  </div>
                                </div>
                            </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
