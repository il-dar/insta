
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 panel-heading">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="text-center" id="login-form" style="display: block;">
              <div class="form-group">
                <div class="panel-login">
                  <div class="panel panel-heading text-center login-">
                    <h2>Forgot your password?</h2>
                  </div>

                  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= f.error_notification %>

                  <div class="input email-input">
                    <%= f.input :email, required: true, autofocus: true %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Send me reset password instructions", :class => "btn-login" %>
                  </div>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
          <div class="text-center forgot-password">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
