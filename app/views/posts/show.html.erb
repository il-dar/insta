<div>
  <a><%= @post.user.user_name %></a>
    <div>
      <%= image_tag @post.image, width: 600 %>
    </div>
    <%= content_tag :div,
    id: "comments_data",
    data: @post.comments.to_json do %>
    <% end %>
    <%= react_component('application')%>

</div>
  <div class="comment-form">
    <h2>Add a Comment</h2>
    <%= form_for([@post, @post.comments.new], remote: true) do |f| %>
    <%= f.text_field :content, placeholder: "Add a comment", class: "comment_content", id: "comment_content_#{@post.id}" %>
    <% end %>
    <% if @post.user.id == current_user.id %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <% else %>
    <%= link_to "Back to Posts", posts_path %>
    <% end %>
  </div>

</div>
